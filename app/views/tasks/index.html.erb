<h1>Tasks</h1>
<p><%= link_to 'Create a new task', new_task_path %>
<ul>
  <% @tasks.each do |task| %>
    <li>
      <%= link_to task_path(task) do %>
        <h2><%= task.name %></h2>
      <% end %>
        <h3>Description: <%= task.description %></h3>
        <p>
          <%= link_to "Edit task", edit_task_path(task) %>
           | 
          <%= link_to "Delete task", task_path(task), method: 'delete' %></p>
    </li>
  <% end %>
</ul>